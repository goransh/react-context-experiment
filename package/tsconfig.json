{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "../dist",
    "declaration": true,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
    "removeComments": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "../node_modules", "example"
  ]
}
